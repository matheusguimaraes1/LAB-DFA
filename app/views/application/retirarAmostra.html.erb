    <script>

    function changePage(pageId) {
    var pages = document.getElementsByClassName("pages");
    for (var i = 0; i < pages.length; i++) {
      pages[i].classList.remove("active-page");
    }

    var selectedPage = document.getElementById(pageId);
    selectedPage.classList.add("active-page");

    // Fazer uma solicitação AJAX para buscar os dados da tabela amostras_biorepositorio
    fetch('/api/amostras_biorepositorio')
      .then(response => response.json())
      .then(data => {
        // Limpar a tabela
        var tableBody = selectedPage.querySelector('tbody');
        tableBody.innerHTML = '';

        // Preencher a tabela com os dados
        data.forEach(item => {
          var row = document.createElement('tr');

          var codigoCell = document.createElement('td');
          codigoCell.innerText = item.numero_amostra;
          row.appendChild(codigoCell);

          var materialCell = document.createElement('td');
          materialCell.innerText = item.resp_cadastro;
          row.appendChild(materialCell);

          var dataColetaCell = document.createElement('td');
          dataColetaCell.innerText = item.data_coleta;
          row.appendChild(dataColetaCell);

          var selecionarCell = document.createElement('td');
          selecionarCell.classList.add('checkbox-cell');
          var checkbox = document.createElement('input');
          checkbox.type = 'checkbox';
          selecionarCell.appendChild(checkbox);
          row.appendChild(selecionarCell);

          tableBody.appendChild(row);
        });
      })
      .catch(error => {
        console.error('Ocorreu um erro ao buscar os dados:', error);
      });
  }
        function exportData() {
            var selectedCheckboxes = document.querySelectorAll('input[type="checkbox"]:checked');
            var data = [];

            selectedCheckboxes.forEach(function (checkbox) {
                var row = checkbox.parentNode.parentNode;
                var rowData = {
                    nome: row.cells[0].innerText,
                    idade: row.cells[1].innerText,
                    estado: row.cells[2].innerText
                };
                data.push(rowData);
            });

            if (data.length > 0) {
                // Simulando o download de um arquivo
                var jsonData = JSON.stringify(data);
                var filename = "data.json";
                var blob = new Blob([jsonData], { type: "application/json" });
                var url = URL.createObjectURL(blob);

                var a = document.createElement("a");
                a.href = url;
                a.download = filename;
                a.click();

                // Limpa a URL criada
                URL.revokeObjectURL(url);
            } else {
                alert("Nenhum item selecionado para exportar.");
            }
        }

        changePage('grupo1');
    </script>
