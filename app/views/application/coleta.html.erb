     </script>
</head>
<body>
    <div class="grid-container">
        <h1 class="logo">Registro Dados | Coleta</h1>

        <%= form_with model: @amostra, url: '/coleta', method: :post do |form| %>
          <%= form.label :nome_paciente %>
          <%= form.text_field :nome_paciente %>

          <%= form.label :cpf %>
          <%= form.text_field :cpf %>

          <%= form.label :rg %>
          <%= form.text_field :rg %>

          <%= form.label :nome_coletora %>
          <%= form.text_field :nome_coletora %>

          <%= form.label :projeto %>
          <%= form.select :projeto, ['GAB', 'ZikAlliance', 'Inova'] %>

          <%= form.submit 'Enviar' %>
        <% end %>
    </div>
</body>
</html>
